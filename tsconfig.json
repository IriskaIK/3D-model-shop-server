{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["./src/**/*", "./src/**/*.json"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "files":[
    "src/types/index.d.ts"
  ]
}
